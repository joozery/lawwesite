// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  // Remove output custom path to ensure compatibility with standard node_modules
  // output   = "../src/generated/prisma" 
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Insight {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String   @db.LongText
  coverImage  String?
  category    String
  author      String
  authorRole  String?
  authorImage String?
  readTime    String?
  views       Int      @default(0)
  tags        String?
  published   Boolean  @default(true)
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PracticeArea {
  id           String   @id @default(cuid())
  title        String
  slug         String   @unique
  subtitle     String?
  description  String?  @db.LongText
  
  // New Design Fields
  quote        String?  @db.Text
  contactEmail String?
  overview     String?  @db.LongText // Full content (can store HTML or plain text)
  experience   String?  @db.LongText // JSON string of array
  
  features     String?  @db.LongText
  details      String?  @db.LongText
  
  image        String?
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Explicit Many-to-Many is better for some databases, but implicit works for MySQL too.
  // Using Implicit Many-to-Many
  attorneys    Attorney[]
}

model Attorney {
  id            String   @id @default(cuid())
  name          String
  slug          String   @unique
  role          String
  image         String?
  email         String?
  phone         String?
  linkedin      String?
  
  profile       String?  @db.LongText
  contributions String?  @db.LongText // JSON string array
  
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  practiceAreas PracticeArea[]
}

model Ebook {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String
  fileUrl     String
  coverImage  String?
  downloads   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
